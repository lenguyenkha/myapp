<tr>
  <td><%= product.id %></td>
  <td class="th-product"><%= image_tag product.picture.url %></td>
  <td><%= product.name %></td>
  <td><%= product.quantity %></td>
  <td><%= product.price %></td>
  <td><%= product.category_name %></td>
  <td><%= l product.created_at %></td>
  <td><%= l product.updated_at %></td>
  <td>
    <%= link_to admin_product_path(product), method: :delete,
      data: {confirm: t("admin.products.destroy.confirm")} do %>
      <i class="fa fa-trash-o"></i>
    <% end %>
    |
    <%= link_to edit_admin_product_path(product) do %>
      <i class="fa fa-pencil-square-o"></i>
    <% end %>
  </td>
</tr>
